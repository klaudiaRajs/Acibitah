@model HomeViewModel

<form method="post" action="@Url.Action("QuickAddTaskWithTags", "Home")">
    <div class="mb-3 row">
        <input asp-for="@Model.ToDo.Title" class="form-control" />
        <button type="submit" class="btn btn-primary">@(Model.ToDo?.Id != 0 ? "Update" : "Create")</button>
    </div>
</form>

<table class="table text-center" >
    <thead class="thead-light">
        <tr>
            <th scope="col"></th>
            <th scope="col">@nameof(ToDoTask.Title)</th>
            <th scope="col">@nameof(ToDoTask.Tags)</th>
        </tr>
    </thead>
    <tbody>
        @foreach (ToDoTask task in Model.ToDos)
        {
            <tr>
                <th scope="row">
                    <input type="checkbox" />
                </th>
                <td>
                    @task.Title
                </td>
                <td>
                    @string.Join(",", task.Tags.Select(a => a.Name))
                </td>
            </tr>
        }
    </tbody>
</table>