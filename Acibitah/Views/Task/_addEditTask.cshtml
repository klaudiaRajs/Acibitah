@model ToDoTask

<form method="post">
    <div class="pt-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary"> @(Model.Id != 0 ? "Update" : "Create") task </h2>
            <hr />
        </div>
        </div>
        <div class="mb-3 w-25 row">
            <input asp-for="Id" hidden/>
        </div>
        <div class="mb-3 w-25 row">
            <label asp-for="Title"></label>
            <input asp-for="Title" class="form-control" />
        </div>
        <div class="mb-3 w-25 row">
            <label asp-for="Content"></label>
            <input asp-for="Content" class="form-control" />
        </div>
        <div class="mb-3 w-25 row">
            <label asp-for="Difficulty"></label>
            <input asp-for="Difficulty" class="form-control" />
        </div>
        <div class="row w-25">
            <div class="col-6">
                <button type="submit" class="btn btn-primary w-5">@(Model.Id != 0 ? "Update" : "Create")</button>
            </div>
        </div>
    </div>
</form>